<div class="game-card mb-3">
  <%= image_tag "placeholder", alt: "Placeholder image", class:"game-img" %>
  <div class="card-body">
    <h5><%=game.title%></h5>
    <p><%=game.platform%></p>
    <p><%=game.status%></p>
  </div>
  <div class="card-footer">
    <%=link_to "Check this game", game_path(game), class: "btn btn-primary"%>
  </div>
</div>
